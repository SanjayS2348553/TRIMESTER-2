// Base class Employee
public class Employee {
    private int employeeId;
    private String employeeName;
    private String designation;

    public Employee(int employeeId, String employeeName, String designation) {
        this.employeeId = employeeId;
        this.employeeName = employeeName;
        this.designation = designation;
    }

    // Getters and setters for attributes
    // ...

    // Method to calculate bonus (to be overridden)
    public double calculateBonus() {
        // Default bonus calculation logic
        return 0.0;
    }

    // Method to display detailed employee information including weekly salary
    public void displayEmployeeInfo() {
        // Display employee details and calculated weekly salary
    }

    // Method to compute and display annual earnings
    public void displayAnnualEarnings() {
        // Display annual earnings
    }
}

// HourlyEmployee class extending Employee
public class HourlyEmployee extends Employee {
    private double hourlyRate;
    private int hoursWorked;

    public HourlyEmployee(int employeeId, String employeeName, String designation, double hourlyRate, int hoursWorked) {
        super(employeeId, employeeName, designation);
        this.hourlyRate = hourlyRate;
        this.hoursWorked = hoursWorked;
    }

    // Override methods for calculating weekly salary, bonus, and displaying detailed info
    // ...

    // Additional methods for validation and computing annual earnings
    // ...
}

